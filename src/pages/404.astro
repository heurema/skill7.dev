---
import Base from "../layouts/Base.astro";
---

<Base title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="py-24 text-center">
    <p class="font-mono text-sm text-dark-dim mb-4">This page doesn't exist.</p>
    <h1 class="font-heading font-bold text-6xl text-gradient-acid">404</h1>
    <p class="mt-4 text-lg text-dark-lo">Page not found.</p>
    <div class="mt-8">
      <a href="/" class="btn-primary">Go to Catalog</a>
    </div>
  </div>
</Base>
