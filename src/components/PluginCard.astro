---
import StatusBadge from "./StatusBadge.astro";
import TagList from "./TagList.astro";
import type { PluginMeta } from "../lib/types";

interface Props {
  plugin: PluginMeta;
}

const { plugin } = Astro.props;
const initials = plugin.name.slice(0, 2).toUpperCase();
---

<a href={`/${plugin.category}/${plugin.name}`} class="card-accent block group focus-visible:ring-2 focus-visible:ring-acid focus-visible:outline-none">
  <div class="flex items-start gap-4">
    <div class="plugin-icon">
      {initials}
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <h3 class="font-heading font-semibold text-xl text-dark-hi group-hover:text-acid transition-colors">
          {plugin.name}
        </h3>
        <StatusBadge status={plugin.status} />
        {plugin.verified && (
          <span class="badge-verified" aria-label="Verified: reviewed by heurema for security and quality">
            verified
          </span>
        )}
      </div>
      <p class="mt-2 text-sm text-dark-lo line-clamp-2 leading-relaxed">
        {plugin.description}
      </p>
      <div class="mt-3.5 pointer-events-none">
        <TagList tags={plugin.tags} limit={3} />
      </div>
    </div>
  </div>
</a>
