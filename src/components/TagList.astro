---
interface Props {
  tags: string[];
  limit?: number;
}

const { tags, limit } = Astro.props;
const displayed = limit ? tags.slice(0, limit) : tags;
const overflow = limit && tags.length > limit ? tags.length - limit : 0;
---

<div class="flex flex-wrap gap-1.5">
  {displayed.map((tag) => (
    <span class="tag">{tag}</span>
  ))}
  {overflow > 0 && (
    <span class="tag text-dark-dim">+{overflow}</span>
  )}
</div>
