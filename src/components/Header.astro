---
const navItems = [
  { label: "Catalog", href: "/" },
  { label: "Getting Started", href: "/getting-started" },
];
---

<header class="border-b border-gray-200 bg-white">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href="/" class="text-xl font-bold text-brand-600">skill7</a>

    <!-- Desktop nav -->
    <div class="hidden sm:flex items-center gap-6">
      {navItems.map(({ label, href }) => (
        <a href={href} class="text-sm font-medium text-gray-600 hover:text-gray-900">
          {label}
        </a>
      ))}
      <a href="https://github.com/heurema/emporium" class="text-sm font-medium text-gray-500 hover:text-gray-700" target="_blank" rel="noopener">
        GitHub
      </a>
    </div>

    <!-- Mobile nav -->
    <details class="sm:hidden relative">
      <summary class="cursor-pointer text-gray-600 list-none">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </summary>
      <div class="absolute right-0 top-8 z-10 rounded-lg border border-gray-200 bg-white p-4 shadow-lg min-w-48">
        {navItems.map(({ label, href }) => (
          <a href={href} class="block py-2 text-sm font-medium text-gray-600 hover:text-gray-900">{label}</a>
        ))}
        <a href="https://github.com/heurema/emporium" class="block py-2 text-sm font-medium text-gray-500 hover:text-gray-700" target="_blank" rel="noopener">GitHub</a>
      </div>
    </details>
  </nav>
</header>
